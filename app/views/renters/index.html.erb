<table>
  <% @renters.each do |renter| %>
    <tr>
      <td><%= link_to renter.name, renter_path(renter) %></td>
      <td><%= button_to 'Edit', edit_renter_path(renter), method: 'get'%></td>
      <td><%= button_to 'Remove', renter_path(renter), method: 'delete', data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</table>
<%= link_to "Add a New Renter", new_renter_path %>